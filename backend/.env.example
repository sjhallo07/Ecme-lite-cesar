PORT=3001

# Comma-separated hostnames (no schemes/paths). Supports leading wildcard for Azure OpenAI: *.openai.azure.com
AGENT_HOST_ALLOWLIST=localhost,127.0.0.1,api.openai.com,*.openai.azure.com

# Timeouts and size limits
AGENT_TIMEOUT_MS=60000
AGENT_MAX_REQ_BODY=262144
AGENT_MAX_NONSTREAM_RESP=2097152
AGENT_SSE_HEARTBEAT_MS=15000

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=ecme_lite
MONGODB_COLLECTION_EVENTS=agent_events

# Local uploads directory (used by uploads router)
UPLOAD_DIR=uploads